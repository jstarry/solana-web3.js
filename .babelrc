{
  "presets": [
    [ "@babel/preset-env", { "modules": false } ],
    "@babel/preset-flow",
  ],

  "plugins": [
    ["module-resolver", {
      "root": ["./src"],
    }],
    "@babel/plugin-transform-runtime",
    "@babel/plugin-proposal-class-properties",
    "@babel/plugin-proposal-function-bind",
  ],

  "env": {
    "test": {
      "plugins": [
        "@babel/plugin-transform-runtime",
      ],
      "presets": [
        "@babel/preset-env",
        "@babel/preset-flow",
      ],
    },
  },
}
